@model TaskManagement.Services.DTOs.TaskItem.TaskItemDTO;

@{
    ViewData["Title"] = "Create Task";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow-sm p-4 border-0">
            <div class="card-header bg-transparent text-primary text-center mb-3 rounded-3">
                <h5 class="mb-0">Add a New Task</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DueDate" class="form-label"></label>
                        <input asp-for="DueDate" type="date" class="form-control" />
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary btn-md">
                            Add Task
                        </button>
                    </div>
                </form>
                <div class="mt-3">
                    <a asp-action="Index" asp-controller="TaskItem" class="btn btn-outline-secondary btn-md">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>


